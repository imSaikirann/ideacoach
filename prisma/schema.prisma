// ================================
// Prisma Client
// ================================
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

// ================================
// MongoDB Datasource
// ================================
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ================================
// NextAuth Models (MongoDB)
// ================================

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]
  ideas     IdeasGenerated[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId

  type              String
  provider          String
  providerAccountId String

  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ================================
// Your App Model
// ================================

model IdeasGenerated {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId

  userId String? @db.ObjectId
  user   User?   @relation(fields: [userId], references: [id])

  techStack     String
  difficulty    String
  interest      String
  role          String
  goal          String

  title         String
  problemSolved String
  targetUsers   String
  whyThis       String

  features     String[]
  skillsProved String[]

  estimatedTime String

  createdAt DateTime @default(now())
}
